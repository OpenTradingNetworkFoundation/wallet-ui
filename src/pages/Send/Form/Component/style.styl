+b('send-form')
  +e('content')
    border-bottom 1px solid #f2f2f4
    padding 0 0 20px

    +e('asset')
      display flex

      +e('asset-selector')
        flex 1

    +e('max-amount')
      display flex
      flex 1
      padding-left 180px
      margin 16px 0 0 auto

      font-size 12px
      font-weight $font-bold
      color rgba(23, 30, 50, 0.5)
      opacity 0.5

      +e('max-amount-icon')
        width 17px
        height 14px
        margin-right 9px

    +e('amount')
      display flex
      margin 14px 0 25px

      +e('input')
        flex 1

    +e('label')
      color $modal-header
      font-size 14px
      font-weight $font-medium
      margin 12px 0
      flex 0 0 180px

    +e('fee-panel')
      margin-bottom 29px
      .fee-percentage
        flex 0 0 180px
      .fee-panel__selector
        position absolute
        right 0

    +e('user-selector')
      padding 20px 20px 20px 18px
      border-radius 6px
      background-color $background-white

      +e('user-label')
        display block
        margin-bottom 8px
        font-size 12px
        font-weight $font-bold
        color $modal-header

    +e('memo-container')
      margin-bottom 28px
      display flex

      +e('memo-textarea')
        height 80px
        flex 1 1

      +e('memo-optional')
        color #898c96
        font-size 10px
        font-weight 500
        display block
        margin-top 4px

  +e('footer')
    margin-top 21px
    display flex
    justify-content flex-end

  +e('tooltip')
    width 350px
    margin-left 10px

  +e('tooltip-warning')
    display block
    margin-top 10px

  +e('tooltip-container')
    margin-left 4px
    vertical-align middle

    & > svg
      width 12px
      height 12px
      color rgba(23, 30, 50, 0.5)