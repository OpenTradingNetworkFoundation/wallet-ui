+b('exchange-entrypoint')
  width 100%

  +e('header')
    display flex
    margin-bottom 20px
    justify-content space-between

    +e('label-container')
      display flex

    +e('page-label')
      font-size 28px
      font-weight $font-bold
      letter-spacing -1px
      color $gray-bright

      +m('pro')
        color $white

    +e('pro-icon')
      margin 8px 5px 6px
      border-radius 5px
      background-color $white
      padding 2px 8px 4px

      font-size 14px
      color #22263a
      font-weight $font-bold

      animation appear 0.3s linear