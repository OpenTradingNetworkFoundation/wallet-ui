+b('toasts')
  position absolute
  top 0
  right 0
  padding 14px
  width 290px
  color #fff

  height auto
  overflow-y auto
  max-height 100vh

  z-index 1000

  +e('item')
    position relative
    overflow hidden
    border-radius 6px
    box-shadow 0 2px 10px rgba(47, 38, 78, 0.1)
    opacity 0
    transition opacity .24s ease, transform .24s ease
    transform scale(.6)
    & + &
      margin-top 12px
      
    +m('success')
      background-color #2b3049
      
    +m('error')
      background-color: #e75a5a;

    +m('show')
      transform scale(1)
      opacity 1

    +m('hide')
      transform scale(1)
      transition opacity 1s ease

    +m('close')
      transform scale(1)
      transition opacity .24s ease

    +m('collapse')
      transform scale(1)
      transition height .16s ease
      pointer-events none

  +e('item-header')
    display flex
    align-items flex-start
    justify-content space-between
    padding 6px 16px
    background-color rgba(255,255,255,.1)

  +e('item-title')
    margin-right 16px
    font-size 10px
    font-weight 700
    line-height 18px
    text-transform uppercase

  +e('item-close')
    cursor pointer
    width 9px
    height 9px
    margin-top 5px
    fill: white

  +e('item-content')
    padding 16px
