+b('toast-content')
  display flex
  align-items center
  flex-direction: row nowrap;
  
  +e('amount')
    font-size 26px 
    font-weight 600

  +e('icon')
    margin-right 15px
    width 37px
    height 38px

    .tokenized-icon 
      background-color #2b3049
      
    .tokenized-icon__otn-icon
      border 2px solid #2b3049

  +m('small')
    +e('label')
      font-size 14px
      font-weight 600
      line-height 24px
      color #fff
      opacity 0.5
      width 50px
    
    +e('amount')
      font-size 14px 
      font-weight 600

    +e('icon')
      width 14px
      height 15px
      margin-right 4px
