+b('navigation-bar')
  color white

  +e('element')
    display flex
    width 100%
    height 84px
    transition background-color .16s ease

    &:focus
      outline none

    &:hover
    &:active
      background-color $gray-light-hover

    +m('active')
      background-color $gray-light
      &:hover
        background-color $gray-light

    +e('wrapper')
      color $white
      text-transform none
      display flex
      width 100%
      padding 14px 49px 14px 20px

      +m('small')
        padding 14px 20px

      +e('icon')
        width 28px
        height 28px
        flex 0 0 28px

        margin-top 2px

      +e('content')
        display flex
        flex-direction column
        margin-left 19px
        animation appearWithDelay 0.35s linear

        +e('description')
          color $gray-heavy
          font-size 13px
          font-weight $font-medium
          letter-spacing -0.1px
          transition opacity 0.07s linear

          +m('hidden')
            width 140px
            opacity 0

        +e('title')
          letter-spacing -0.4px
          font-weight $font-medium
          font-size 18px
          margin-bottom 5px