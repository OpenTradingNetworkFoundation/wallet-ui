+b('error-node') 
  display flex
  flex-direction column
  align-items center
  justify-content center
  height 100vh
  text-align center
  
  +e('icon')
    margin 0 0 20px 0
    svg 
      width 120px
      height 105px

  +e('status')
    color white
    font-size 28px
    font-weight 700
    text-transform uppercase
    letter-spacing -0.22px
    margin: 0 0 11px 0

  +e('title')
    opacity 0.5
    color #ffffff
    font-size 20px
    font-weight 700
    letter-spacing -0.15px
    margin 0 0 9px 0

  +e('description')
    opacity 0.5
    color #ffffff
    font-size 14px
    font-weight 500
    letter-spacing -0.11px
    margin 0