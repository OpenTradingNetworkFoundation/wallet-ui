+b('sidebar-feedback')
  padding 6px 24px 20px
  white-space nowrap
  overflow hidden
  font-size 10px

  +e('text')
    animation appearWithDelay 0.35s linear

  +e('url')
    background-color #40455b
    &:hover
      background-color $comet
      color $white

    border-radius 4px
    padding 4px 12px

    +m('small')
      padding 4px 8px

    text-transform uppercase
    font-size 10px
    font-weight $font-bold
    color $white

    +e('url-icon')
      width 10px
      height 10px
      margin-left 5px
      margin-bottom -1px

      +m('small')
        margin-left 0

  +e('version')
    margin-left 12px
    font-weight $font-medium
    animation appearWithDelay 0.35s linear
    color $gray-heavy