+b('sidebar')
  display flex
  flex-direction column
  min-height 100%

  width 250px
  background-color $background-dark

  position absolute
  z-index 2
  height 100vh

  transition width 0.3s ease-in, opacity 0.3s ease-in

  +m('small')
    width 70px
    transition opacity 0.2s ease-out 0.2s
    z-index 3

  +m('hidden')
    opacity 0
    pointer-events none
    width 70px

    transition width 0.3s ease-out, opacity 0.3s ease-out

    &.sidebar--small
      transition opacity 0.2s ease-out

  +e('navigation')
    flex-grow 1

  +e('user-avatar')
    margin-bottom 20px
    margin-right 18px

  +e('content')
    display flex
    flex-direction column
    height 100%

    opacity 1

    transition opacity 0.1s ease-in 0.3s

    +m('hidden')
      opacity 0
      transition opacity 0.1s ease-out