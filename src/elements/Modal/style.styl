+b('modal')
  +m('opening')
    +e('body')
      opacity 1
    +e('header')
      opacity 1

  +m('closing')
    animation appear 0.5s 1
    animation-direction reverse
    animation-timing-function cubic-bezier(0.42, 0, 0.58, 1)

  +e('overlay')
    height 100%
    background-color $background-white

  +e('body')
    transition opacity 0.4s cubic-bezier(0.42, 0, 0.58, 1)
    opacity 0

  +e('content')
      
      margin-left auto
      margin-right auto

      border-radius 8px
      box-shadow: 0 2px 10px $modal-background-shadow;
      background-color $white
      //overflow auto
      outline none
      padding 24px 22px 20px

  +e('header')
    display flex
    justify-content space-between
    padding-bottom 20px
    border-bottom 1px solid #f2f2f4
    margin-bottom 20px
    opacity 0
    transition opacity 0.4s cubic-bezier(0.42, 0, 0.58, 1)


    +m('empty')
      padding-bottom 8px
      border-bottom 1px solid transparent
      margin-bottom 0

    +e('close-icon')
      fill: #308af0
      width 28px
      height 20px
      padding 4px 8px
      border 0
      border-radius 6px
      cursor pointer
      transition background-color ease-in-out .3s

      &:hover
        background-color $modal-close-hover

    +e('header-content')
      font-size 18px
      font-weight $font-medium
      line-height 24px
      color $modal-header