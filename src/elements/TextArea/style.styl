+b('text-area')
  position relative

  +e('textarea')
    width 100%
    height 100%
    resize none
    outline none
    border 1px solid rgba(89, 89, 89, 0.2)
    background-color rgba(89, 89, 89, 0.02)
    border-radius 6px
    padding 12px 20px 2px 18px

    font-size 14px
    color #171e32
    font-weight 500

    &::placeholder
      opacity 0.5

    &:hover, &:focus
      border-color #318af0

    &:disabled
      cursor not-allowed
      opacity 0.3

      &:hover
        border-color rgba(89, 89, 89, 0.2)


  +e('border')
    position absolute
    bottom 1px
    background-image linear-gradient(to top, #fcfcfc 0%, rgba(252, 252, 252, 0) 100%)
    border-radius 6px
    width: calc(100% - 2px)
    height: 32px
    margin 0 1px