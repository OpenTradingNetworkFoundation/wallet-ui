+b('tooltip')
  display flex

  +e('content')
    padding 16px
    border-radius 6px
    margin-bottom 4px

    +m('hide')
      display none

    +m('white')
      border 1px solid #ebebeb
      background-color $white
      box-shadow 0 2px 10px rgba(38, 42, 78, 0.05)

    +m('dark')
      border 1px solid rgba(255,255,255,0.05)
      background-color #2b3049
      box-shadow 0 2px 10px #212538